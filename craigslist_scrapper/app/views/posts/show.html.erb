<p id="notice"><%= notice %></p>
<div class="container">

<div class= "header">
<h3> 
<%= @post.heading %> 
</h3>
<p> 
<%= link_to @post.external_url, @post.external_url %> 

</p>
</div>
<div class= "row">
<div class= "col-md-7">
<% @images.each do |image| %>
<%= image_tag image.url, class: "thumbnail"%> 
<% end %> 
</div>

<div class= "col-md-5" %> 
<%= @post.price %><br> 
<%= @post.neighborhood %><br> 
Bedrooms: <%= @post.bedrooms %>
Bathrooms: <%= @post.bathrooms %> <br> 
Square Footage: <%= @post.sqft %> <br> 
Cats allowed: <%= @post.cats %> <br> 
Dogs allowed: <%= @post.dogs %> <br> 
Street parking: <%= @post.street_parking %> 

<p>
<%= @post.body %> 
</p>
  





<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>
</div>
</div>
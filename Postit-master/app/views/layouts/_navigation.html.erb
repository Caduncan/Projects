<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<div class="btn-group nav_item">
  <%= link_to '#', class: "btn btn-small dropdown-toggle", 'data-toggle' => "dropdown" do %>
    Categories <span class="caret"></span>
  <% end %>>
  <ul class="dropdown-menu">
    <% all_categories.each do |category| %>
      <li><%= link_to category.name, category_path(category) %></li>
    <% end %>

    <% if admin? %>
      <li class="divider"></li>
      <li>
        <%= link_to(new_category_path) do %>
          <%= content_tag(:i, '', class: 'icon-plus') %> New Category
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<% if logged_in? %>
  <div class="nav_item">
    <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
  </div>

  <div class="btn-group nav_item">
    <%= link_to '#', class: "btn btn-small dropdown-toggle", 'data-toggle' => "dropdown" do %>
      <%= current_user.username%> <span class="caret"></span>
    <% end %>>
    <ul class="dropdown-menu">
      <li>
        <%= link_to edit_user_path(current_user) do %>
          <%= content_tag(:i, '', class: 'icon-pencil') %> Edit Profile
        <% end %>
      </li>
      <li>
        <%= link_to user_path(current_user) do %>
          <%= content_tag(:i, '', class: 'icon-user') %> View Profile
        <% end %>
      </li>
      <li>
        <%= link_to logout_path do %>
          <%= content_tag(:i, '', class: 'icon-circle-arrow-left') %> Logout
        <% end %>
      </li>
    </ul>
  </div>
<% else %>
  <div class="nav_item">
    <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
  </div>

  <div class="nav_item">
    <%= link_to 'Login', login_path, class: 'btn btn-small' %>
  </div>
<% end %>